  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "@prisma/client": "^2.29.0",
    "bree": "^6.2.1",
    "chance": "^1.1.7",
    "date-fns": "^2.23.0",
    "dotenv": "^8.2.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "node-mailjet": "^3.3.4",
    "prisma": "^2.29.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/bree": "^6.2.1",
    "@types/chance": "^1.1.3",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa__router": "^8.0.5",
    "@types/node": "^14.14.36",
    "@types/node-mailjet": "^3.3.7",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "husky": "4",
    "lint-staged": ">=10",
    "prettier": "2.2.1",
    "simple-git-hooks": ">=2.0.3",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
